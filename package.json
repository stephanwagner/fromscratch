{
  "name": "fromscratch",
  "description": "",
  "private": false,
  "homepage": "https://github.com/StephanWagner/fromscratch",
  "type": "module",
  "scripts": {
    "watch": "concurrently \"npm run watch:js\" \"npm run watch:css\"",
    "watch:js": "MODE=dev rollup -c -w",
    "watch:css": "sass themes/fromscratch/src/scss:themes/fromscratch/css --watch --source-map",
    "build": "npm run build:js && npm run build:css",
    "build:js": "MODE=dev rollup -c && MODE=prod rollup -c",
    "build:css": "npm run build:css:dev && npm run build:css:prod && (test -d themes/fromscratch/css/min && rm -rf themes/fromscratch/css/min || true)",
    "build:css:dev": "sass themes/fromscratch/src/scss:themes/fromscratch/css --style=expanded --source-map",
    "build:css:prod": "sass themes/fromscratch/src/scss/min:themes/fromscratch/css --style=compressed --no-source-map"
  },
  "dependencies": {
    "countup.js": "^2.9.0",
    "normalize.css": "^8.0.1",
    "swiper": "^12.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "rollup": "^4.57.0",
    "sass": "^1.97.3"
  }
}
